<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rentacarbg"
    tools:context="com.chameleon.iservev10.RentaCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerInParent="true"
            android:id="@+id/linearLayout">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/RentaCarPlaceToET"
                android:hint="To"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:inputType="textPersonName"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/RentaCarPlaceFromET"
                android:hint="From"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:inputType="textPersonName"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/RentaCarDateET"
                android:hint="Journey Date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:inputType="date"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <Spinner
                android:id="@+id/CarSP"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/myspinner"
                android:scrollbarSize="34sp"
                android:popupBackground="@drawable/spinnerbackground"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/RentaCarbtn"
                android:layout_width="320dp"
                android:layout_height="00dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Done"

                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:onClick="onCommonPageRentaCar"
                android:background="@drawable/mybuttons"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
