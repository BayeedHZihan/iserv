<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trainb"
    tools:context="com.chameleon.iservev10.BusTicket">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.7"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerInParent="true"
            android:id="@+id/linearLayout">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/BusNameET"
                android:hint="Bus Name"
                app:met_textColorHint="#ffffff"
                android:textSize="25sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:inputType="textPersonName"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/PlaceToET"
                android:hint="To"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                app:met_textColorHint="#ffffff"
                android:textSize="25sp"
                android:inputType="textPersonName"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/PlaceFromET"
                android:hint="From"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                app:met_textColorHint="#ffffff"
                android:textSize="25sp"
                android:inputType="date"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/DateET"
                android:hint="Date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                app:met_textColorHint="#ffffff"
                android:textSize="25sp"
                android:inputType="date"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <Spinner
                android:id="@+id/TimeSP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/myspinner"
                android:scrollbarSize="34sp"
                android:layout_margin="10dp"
                android:popupBackground="@drawable/spinnerbackground"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.3">
            <Button
                android:id="@+id/Busbtn"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"

                android:text="OK"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:onClick="onCommonPageBus"
                android:background="@drawable/mybuttons"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
