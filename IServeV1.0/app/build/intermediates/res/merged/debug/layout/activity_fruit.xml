<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fruitbg"
    tools:context="com.chameleon.iservev10.Fruit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtFruitName"
            android:hint="Fruit Name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:inputType="textPersonName"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtFruitAmount"
            android:hint="Amount"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:inputType="number"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />

    </LinearLayout>

    <Button

        android:id="@+id/Fruitbtn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center_horizontal"
        android:onClick="onFruit"
        android:background="@drawable/mybuttons"/>

</RelativeLayout>
