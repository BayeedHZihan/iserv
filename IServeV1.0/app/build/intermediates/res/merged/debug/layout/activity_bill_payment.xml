<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chameleon.iservev10.BillPayment"
    android:background="@drawable/billpaymentb">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/creditCardbtn"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_marginTop="25dp"
                    android:background="#00B6DE"
                    android:onClick="onCreditcard"
                    android:padding="10dp"
                    app:srcCompat="@drawable/creditcard" />

                <ImageView
                    android:id="@+id/electricitybtn"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:background="#FF7659"
                    android:onClick="onElectricity"
                    app:srcCompat="@drawable/elec"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Credit Card Bill"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Electricity Bill"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gasbtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="25dp"
                    android:background="#F8CD36"
                    android:onClick="onGas"
                    app:srcCompat="@drawable/gasbill" />

                <ImageView
                    android:id="@+id/Internetbtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="25dp"
                    android:background="#9E7AC2"
                    android:onClick="onInternet"
                    app:srcCompat="@drawable/internetbill" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Gas Bill"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Internet Bill"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/Otherbtn"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_margin="8dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="25dp"
                    android:background="#56DEA7"
                    android:onClick="onOther"
                    app:srcCompat="@drawable/bill" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Other Bill"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
