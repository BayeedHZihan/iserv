<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundre"
    tools:context="com.chameleon.iservev10.FoodList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">



        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarFoodList"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>
        <EditText
            android:id="@+id/txtsearchFoodList"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Search"

            android:inputType="none"
            android:focusable="false"
            android:textColorHint="@android:color/white"
            tools:layout_editor_absoluteY="0dp"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginLeft="10dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listviewFoodList"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:dividerHeight="2dp"

            android:divider="@android:color/white"></ListView>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relative_layout_btn_foodlist"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"

        android:layout_height="wrap_content">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_shopping_cart_black_24dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_layout_tv_foodlist"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/badge_notification_1_foodlist"
            android:layout_width="32sp"
            android:layout_height="wrap_content"




            android:background="@drawable/badge_item_count"

            android:text="1"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold" />
    </RelativeLayout>







</android.support.design.widget.CoordinatorLayout>
